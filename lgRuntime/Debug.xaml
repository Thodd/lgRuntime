<Window x:Class="lgRuntime.Debug"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DebugWindow" Height="300" Width="605"
        WindowStyle="ToolWindow"
        Closing="Window_Closing"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Height="30" Click="Clear_Click">Clear</Button>
        <TextBox Name="DebugOut" Grid.Row="1" FontFamily="Courier New" Foreground="White" Background="#333333" VerticalScrollBarVisibility="Visible" IsReadOnly="True">
            
        </TextBox>
    </Grid>
</Window>
